# ========================
# TTS VOICE CONFIGURATION (UK Male Optimized)
# ========================
DEFAULT_VOICE=en-GB-Wavenet-D
DEFAULT_SPEAKING_RATE=1.15      # 15% faster than natural (1.0)
DEFAULT_PITCH=-3.0              # -20 to +20 semitones (deeper tone)
DEFAULT_VOLUME=+1.5dB           # Slight volume boost
VOICE_EFFECTS=studio            # "studio"/"telephony"/"none"

# ========================
# SSML PROCESSING (UK Optimized)
# ========================
SSML_BREAK_MS=420               # Pause duration between paragraphs
SSML_EMPHASIS_LEVEL=moderate    # "strong"/"moderate"/"reduced"
SSML_DATE_FORMAT=dmy            # Day-Month-Year for UK
SSML_CURRENCY=GBP               # Force Â£ symbol pronunciation
SSML_TELEPHONE_PREFIX=+44       # UK international code

# ========================
# AUDIO ENHANCEMENTS
# ========================
AUDIO_BASS_BOOST=2.5            # Low-frequency enhancement (0-10)
AUDIO_NOISE_REDUCTION=true      # Enable background noise suppression
AUDIO_NORMALIZE=true            # Auto-level volume between chunks

# ========================
# CLOUDFLARE R2 (Podcast Storage)
# ========================
R2_BUCKET_CHUNKS=tts-uk-male-prod
R2_PUBLIC_BASE_URL_CHUNKS=https://ukmale.example.com/chunks

# ========================
# GOOGLE TTS (Secrets in Render)
# ========================
# GOOGLE_CREDENTIALS=
GCP_PROJECT_ID=your-project-id
GCP_LOCATION=europe-west2        # London region for lower latency

# ========================
# PODCAST DEFAULTS
# ========================
PODCAST_TARGET_LOUDNESS=-16LUFS  # BBC R3 podcast standard
PODCAST_MAX_PEAK=-1.0dBTP       # True peak ceiling
