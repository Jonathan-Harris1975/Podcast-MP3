# ========== CORE APPLICATION ==========
PORT=3000
NODE_ENV=production
LOG_LEVEL=info
INSTANCE_ID=tts-prod-01
APP_VERSION=1.3.0

# 

# --- SSML Rules ---
SSML_ENABLED=true
SSML_PROSODY_RATE=90%  # Slightly slower base rate with faster speaking rate
SSML_PROSODY_PITCH=-2st  # Reinforce deeper tone
SSML_PROSODY_VOLUME=+2dB  # Slightly louder for clarity# Only use Google-supported tags
SSML_EMPHASIS_LEVEL=moderate           # none/reduced/moderate/strong
SSML_VOICE_TIMBRE=default              # default/soft/loud

# Pause Durations (ms)
SSML_PARAGRAPH_PAUSE=500ms
SSML_SENTENCE_PAUSE=250ms
SSML_LIST_ITEM_PAUSE=150ms
SSML_WORD_EMPHASIS_PAUSE=75ms

# Content Processing
SSML_DATE_FORMAT=ymd                   # ymd/mdy/dmy
SSML_TIME_FORMAT=hms24                 # hms12/hms24
SSML_CURRENCY_STYLE=USD                # USD/EURO/GBP
SSML_PHONEME_ALPHABET=ipa              # ipa/x-sampa
SSML_CONVERT_MEASUREMENTS=true         # metric/imperial
SSML_TECH_TERM_PRONUNCIATION=true

# ========== PERFORMANCE TUNING ==========
MAX_CONCURRENT_REQUESTS=50
TTS_TIMEOUT_MS=10000
AUDIO_CACHE_TTL=86400                  # 24h cache
MAX_TEXT_LENGTH=5000                   # chars
MAX_SSML_DEPTH=10                      # Nested tags limit

# ========== SECURITY & CORS ==========
TRUST_PROXY=1                          # Required for Render.com
ALLOWED_ORIGINS=https://yourdomain.com
SECURE_COOKIES=true
SESSION_SECRET=your-super-secret-key-here
CSRF_PROTECTION=true
CONTENT_SECURITY_POLICY="default-src 'self'"

# ========== MONITORING ==========
HEALTH_CHECK_INTERVAL=30s
METRICS_INTERVAL=60s
MAX_LOG_FILES=10
LOG_FILE_SIZE=10MB

# ========== RATE LIMITING ==========
RATE_LIMIT_WINDOW=15m
RATE_LIMIT_MAX=100
RATE_LIMIT_SKIP_HEALTH=true

# ========== AUDIO OUTPUT ==========
DEFAULT_AUDIO_BITRATE=64k
MAX_AUDIO_BITRATE=128k
NORMALIZE_AUDIO=true
PEAK_AMPLITUDE=-3dB

# ====== VOICE DEFAULTS (Google) ======
DEFAULT_VOICE=en-GB-Wavenet-D
DEFAULT_SPEAKING_RATE=1.1
DEFAULT_PITCH=-2.2
SSML_BREAK_MS=420  # Increased from 360 for more natural UK pacingquality/latency
